# API Gateway Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE="AI-Admin API Gateway"
API_VERSION="1.0.0"

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# AI Agent Service URL
AI_AGENT_URL=http://ai_agent:8001

# CRM Configuration
CRM_TYPE=bitrix24
CRM_API_KEY=your_crm_api_key
CRM_BASE_URL=https://your-company.bitrix24.ru

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_admin
POSTGRES_USER=ai_admin
POSTGRES_PASSWORD=your_password

# Gemini API (нужен для прямого доступа)
GEMINI_API_KEY=your_gemini_api_key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
API_KEY_SECRET=your_secret_key_for_api_auth
WEBHOOK_SECRET=your_webhook_verification_secret
