# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp  # или gemini-2.5-flash

# Redis Configuration (для сессий)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration (для логов и аналитики)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_admin
POSTGRES_USER=ai_admin
POSTGRES_PASSWORD=your_password_here

# CRM Configuration
CRM_TYPE=bitrix24  # yclients, dikidi, bitrix24, 1c
CRM_API_KEY=your_crm_api_key
CRM_BASE_URL=https://your-company.bitrix24.ru

# AI Agent Settings
SESSION_TTL=86400  # 24 hours in seconds
MAX_CONTEXT_MESSAGES=20  # Максимум сообщений в контексте
TEMPERATURE=0.7  # Температура для LLM (0.0 - 1.0)

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json or text

# API Settings (если агент имеет свой API)
AI_AGENT_HOST=0.0.0.0
AI_AGENT_PORT=8001
